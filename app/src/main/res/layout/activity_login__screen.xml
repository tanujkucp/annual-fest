<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_back"
    android:orientation="vertical"
    android:background="@color/grey300"
    tools:context="sahil.iiitk_foundationday_app.views.Login_Screen">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="IIIT Kota Presents its Annual Techno-cultural Fest."
        android:textSize="18dp"
        android:padding="5dp"
        android:textColor="@color/grey900"
        android:textAlignment="center"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/ic_launcher_mini" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingBottom="10dp"
        android:textSize="25dp"
        android:layout_gravity="center"
        />

   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_marginTop="25dp"
       android:layout_marginHorizontal="10dp"
       android:layout_marginBottom="10dp"
       app:cardElevation="5dp"
       app:cardCornerRadius="5dp"
       app:cardBackgroundColor="@color/grey100">


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="@drawable/reg_now_border">


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:layout_marginBottom="10dp"
               android:text="Choose an option to verify identiy."
               android:textSize="18dp"
               android:textColor="@color/grey800"
               android:layout_gravity="center"/>

           <com.google.android.gms.common.SignInButton
               android:id="@+id/sign_in_button"
               android:layout_width="200dp"
               android:layout_height="54dp"
               android:layout_gravity="center_horizontal" />

           <Button
               android:id="@+id/phonebutton"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="15dp"
               android:text="Mobile OTP Login"
               android:background="@drawable/my_activity_button"
               android:textColor="@color/grey800"
               android:textSize="15sp"
               />

           <Button
               android:id="@+id/button4"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="15dp"
               android:background="@drawable/my_activity_button"
               android:text="LOG IN WITH FFID"
               android:textColor="@color/grey800"
               android:textSize="15sp"
               android:layout_marginBottom="20dp"/>

       </LinearLayout>
   </android.support.v7.widget.CardView>


</LinearLayout>
