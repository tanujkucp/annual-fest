<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey200"
    tools:context=".views.AdminPage">
    <!--
         Made by Tanuj
                      -->
    <android.support.v7.widget.CardView
        android:id="@+id/tab_clubs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/admin_club_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Club Name"
            android:textColor="@color/grey800"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@color/white"/>
    </android.support.v7.widget.CardView>
    <View
        android:layout_below="@id/tab_clubs"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/grey700"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/tab_clubs"
         android:text="Event name -"
         android:textColor="@color/grey900"
         android:layout_marginTop="5dp"
         android:layout_marginLeft="15dp"
         android:paddingStart="5dp"
         android:paddingRight="5dp"
         android:textSize="20sp"/>

    <Spinner
        android:id="@+id/admin_spinner"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="3dp"
        android:layout_below="@id/tab_clubs"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:spinnerMode="dialog"
        android:textAlignment="center" />
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_below="@id/admin_spinner"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp">

        <ListView
            android:id="@+id/admin_registrations"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/reg_now_border"
            android:fastScrollEnabled="true" />
    </android.support.v7.widget.CardView>


</RelativeLayout>