<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    android:background="@color/grey_background">
    <!--
   Made by tanuj
   -->

    <TextView
        android:id="@+id/card_contact_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="ABC"
        android:gravity="center"
        android:textColor="@color/blue800"/>
    <TextView
        android:id="@+id/card_contact_phone"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_contact_name"
        android:gravity="center"
        android:textSize="15sp"
        android:text="458789986665"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/card_contact_title"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_contact_phone"
        android:gravity="center"
        android:text="coordundgf"
        android:textColor="@color/grey700"/>

</RelativeLayout>