<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/reg_now_border">
            <ImageView
                android:id="@+id/user_profile_icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_team_placeholder"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_profile_icon"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:textSize="24dp"
                android:textColor="@color/grey900" />
            <TextView
                android:id="@+id/profile_ffid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_name"
                android:textSize="16dp"
                android:layout_marginBottom="3dp"
                android:layout_centerHorizontal="true"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_ffid"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/profile_collageID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="16dp"
                    android:paddingLeft="3dp"
                    android:textColor="@color/grey800"
                    android:layout_margin="3dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue900"
                    android:layout_marginBottom="3dp"
                    android:layout_below="@id/profile_collageID"/>
                <TextView
                    android:id="@+id/profile_emailID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_collageID"
                    android:textSize="16dp"
                    android:paddingLeft="3dp"
                    android:textColor="@color/grey800"
                    android:layout_margin="4dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue900"
                    android:layout_below="@id/profile_emailID"/>
                <TextView
                    android:id="@+id/profile_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_emailID"
                    android:textSize="16dp"
                    android:paddingLeft="3dp"
                    android:textColor="@color/grey800"
                    android:layout_margin="4dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue900"
                    android:layout_below="@id/profile_mobile"/>
                <TextView
                    android:id="@+id/profile_collage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_mobile"
                    android:textSize="16dp"
                    android:paddingLeft="3dp"
                    android:textColor="@color/grey800"
                    android:layout_margin="4dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue900"
                    android:layout_below="@id/profile_collage"/>
                <TextView
                    android:id="@+id/profile_branch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_collage"
                    android:paddingLeft="3dp"
                    android:textSize="16dp"
                    android:textColor="@color/grey800"
                    android:layout_margin="4dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue900"
                    android:layout_below="@id/profile_branch"/>

                <TextView
                    android:id="@+id/profile_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_branch"
                    android:paddingLeft="3dp"
                    android:textSize="16dp"
                    android:textColor="@color/grey800"
                    android:layout_margin="4dp"/>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>