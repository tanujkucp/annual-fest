<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/grey300">
    <!--
             Made by tanuj
                        -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context="sahil.iiitk_foundationday_app.Register">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/var_dialog"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:textColor="@color/grey900"
            android:layout_centerHorizontal="true"
            android:text="    Verification Done!\nExplore with Guest login."
            android:textSize="17sp"/>
        <Button
            android:id="@+id/reg_later"
            android:textSize="16sp"
            android:background="@drawable/my_activity_button"
            android:layout_below="@+id/var_dialog"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Register Later"
            />


        <View
            android:id="@+id/reg_line"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/reg_later"
            android:background="@drawable/my_activity_button">
        </View>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_line"
        android:layout_margin="7dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/grey100">

        <RelativeLayout
            android:background="@drawable/reg_now_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/register_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register Now"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/register_now"
                android:textColorHint="@color/grey700">


                <EditText
                    android:id="@+id/name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:backgroundTint="@color/blue900"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:paddingTop="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/col"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_below="@id/text_input_layout"
                android:layout_toStartOf="@+id/Year"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:text="College"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/collegespin"
                android:layout_below="@id/text_input_layout"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:layout_toRightOf="@+id/col"
                android:prompt="@string/college"
                android:spinnerMode="dialog"
                android:textAlignment="gravity"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_below="@+id/col"
                android:id="@+id/rel"/>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel"
                android:textColorHint="@color/grey700">

                <EditText
                    android:id="@+id/college_id_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/text_input_layout2"
                    android:backgroundTint="@color/blue900"
                    android:hint="College ID"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_input_layout3"
                android:textColorHint="@color/grey700">

                <EditText
                    android:id="@+id/branch_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/text_input_layout3"
                    android:backgroundTint="@color/blue900"
                    android:hint="Branch"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_input_layout4"
                android:textColorHint="@color/grey700">

                <EditText
                    android:id="@+id/mobile_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/text_input_layout4"
                    android:backgroundTint="@color/blue900"
                    android:ems="10"
                    android:hint="10 Digit Mobile No."
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_input_layout5"
                android:textColorHint="@color/grey700">

                <EditText
                    android:id="@+id/email_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/text_input_layout5"
                    android:backgroundTint="@color/blue900"
                    android:ems="10"
                    android:hint="E-Mail ID"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/textyear"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_alignEnd="@+id/gend"
                android:layout_below="@id/text_input_layout6"
                android:paddingStart="5dp"
                android:text="@string/year"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/Year"
                android:layout_width="165dp"
                android:layout_height="35dp"
                android:layout_below="@id/text_input_layout6"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:layout_toRightOf="@+id/textyear"
                android:prompt="@string/year"
                android:spinnerMode="dialog"
                android:textAlignment="gravity" />


            <TextView
                android:id="@+id/gend"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_below="@id/textyear"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:text="@string/Gender"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Year"
                android:backgroundTint="@color/black"
                android:checkedButton="@id/male"
                android:orientation="horizontal"
                android:paddingStart="100dp"
                android:paddingTop="3dp">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/grey800"
                    android:onClick="onRadioButtonClicked"
                    android:text="Male"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/grey800"
                    android:onClick="onRadioButtonClicked"
                    android:text="Female"
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/black" />


            </RadioGroup>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/iam"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_below="@id/gend"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="I am"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/moc"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rad"
                android:layout_toEndOf="@+id/iam"
                android:backgroundTint="@color/black"
                android:checkedButton="@id/hosteller"
                android:orientation="horizontal"
                android:paddingLeft="40dp"
                android:paddingTop="10dp">

                <RadioButton
                    android:id="@+id/hosteller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/grey800"
                    android:onClick="onMocButtonClicked"
                    android:text="Hosteller"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/dayscholar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/grey800"
                    android:onClick="onMocButtonClicked"
                    android:text="Day Scholar"
                    android:textColor="@color/black" />
            </RadioGroup>

            <Button
                android:id="@+id/submit"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/moc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:onClick="sendMessage"
                android:text="Register Now"
                android:textColor="@color/black"
                android:background="@drawable/my_activity_button"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>





    </RelativeLayout>
</ScrollView>
